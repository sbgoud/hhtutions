{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@supabase-url",
    "VITE_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "VITE_APP_CURRENCY": "@app-currency",
    "VITE_APP_POST_VIEW_PRICE": "@post-view-price",
    "VITE_APP_POST_CREATE_PRICE": "@post-create-price",
    "VITE_RAZORPAY_KEY_ID": "@razorpay-key-id"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}
